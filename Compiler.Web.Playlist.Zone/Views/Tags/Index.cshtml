@model List<Compiler.Abstractions.Dto.Common.Tag.AbstractTagDto>
@{
    ViewData["Title"] = "Tags";
    Layout = null;
}




<div class="row row-item" style="margin:40px 0 0 0;">


    <div class="col-md-3">

        @foreach (var item in Model)
        {
            <div class="tag-m-itm" data-attr-id="@item.Id" data-attr-name="@item.Name" style="float:left; padding:3px 10px; background-color:#578096; color:#FFFFFF; border-radius:3px; margin-top:3px; margin-right:3px; cursor:pointer;">
                @item.Name
            </div>
        }

    </div>


    <div class="col-md-9 sub-content">


        @foreach (var item in Playlist.Zone.Services.Helpers.Artist.ArtistHelper.GetPopularArtists())
        {
            <div class="itm-Srch-Artist" data-attr-artist="@item.Name" style="background:url('/images/singers/@item.Thumbnail') center; background-size:cover;"></div>
            <div class="itm-Blnk"></div>
        }


    </div>


</div>





<script>

    $(document).ready(function () {

        $(".tag-m-itm").on("click", function () {
            
            PreloaderOn(".sub-content");

            $.get('/tags/details/' + $(this).attr("data-attr-id"), function (data) {

                window.location.hash = "tags";
                $(".sub-content").html(data);
                PreloaderOff();
            });
        });
    
    });
    
</script>
