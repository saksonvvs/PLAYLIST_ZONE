@{
    ViewData["Title"] = "Login";
    Layout = "/Views/Shared/_LayoutLogin.cshtml";
}


<div class="row row-item">
    <div class="col-md-12">



        <div class="login-box">


            <div style="float:left; width:100%;">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand" title="Playlist.Zone"><span>Playlist.Zone</span></a>
            </div>


            <form asp-controller="Account" asp-action="Login">
                
                @Html.AntiForgeryToken()

                <div style="float:left; width:100%; padding:5px 10px 0 10px; ">
                    Please enter your username and password
                </div>

                <div style="float:left; width:100%; padding:5px 10px 0 10px; ">
                    <input type="text" id="username" name="username" placeholder="Username" style="width:100%; height:30px; line-height:30px; border-radius:3px; padding:0 4px 0 4px; border:1px solid #989898;" />
                </div>

                <div style="float:left; width:100%; padding:5px 10px 0 10px; ">
                    <input type="password" id="password" name="password" placeholder="Password" style="width:100%; height:30px; line-height:30px; border-radius:3px; padding:0 4px 0 4px; border:1px solid #989898;" />
                </div>


                <div style="float:left; width:100%; padding:5px 10px 0 10px; color:#CC0000; ">
                    @ViewData["LoginResult"]
                </div>

                <div style="float:left; width:100%; padding:5px 10px 0 10px;">
                    <input type="submit" value="Login" style="float:right; width:100%; background-color:#088556; border:none; border-radius:3px; color:#FFFFFF; padding:3px 0 3px 0;" />
                </div>

                <div style="float:left; width:100%; padding:5px 10px 0 10px; margin:10px 0 0 0; font-size:13px; text-align:center;">
                    Not a member? <a href="/Account/Register">Join Now</a>
                </div>

            </form>

        </div>



    </div>
</div>