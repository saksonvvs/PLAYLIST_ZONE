@{
    Layout = null;
}


    <div style="margin:0 0 0 0;">


        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">

                <div class="item active" style=" height:340px;">
                    <div style=" width:100%; height:340px; background-image:url(/images/Billboard_Hot_100_logo.jpg); background-size:cover; background-position:center; background-repeat:no-repeat;">
                    </div>
                </div>

                <div class="item">
                    <div style=" width:100%; height:340px; background-image:url(/images/shazam_charts_top.png); background-size:cover; background-position:center; background-repeat:no-repeat;">
                    </div>
                </div>

                <div class="item">
                    <div style=" width:100%; height:340px; background-image:url(/images/itunes-music-charts.png); background-size:cover; background-position:center; background-repeat:no-repeat;">
                    </div>
                </div>

            </div>

            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>






        <div class="row row-item">
            <div class="col-md-12 sec-back" style="float:left; width:100%; height:42px; line-height:42px; margin:15px 0 0 0; border-radius:2px;">
                <div style="float:left; color:#FFFFFF; font-size:19px;">
                    Tags
                </div>
            </div>
        </div>


        <div class="row row-item" style="margin:15px 0 0 0; line-height:30px;">
            <div class="col-md-4">
                <ul>
                    <li class="plst-hm-item"><a href="/#tags">Country Playlists</a></li>
                    <li class="plst-hm-item"><a href="/#tags">Hip Hop Playlists</a></li>
                    <li class="plst-hm-item"><a href="/#tags">Pop Playlists</a></li>
                </ul>
            </div>

            <div class="col-md-4">
                <ul>
                    <li class="plst-hm-item"><a href="/#tags">Trending Now</a></li>
                    <li class="plst-hm-item"><a href="/#tags">New Releases</a></li>
                    <li class="plst-hm-item"><a href="/#tags">Seasonal</a></li>
                </ul>
            </div>

            <div class="col-md-4">
                <ul>
                    <li class="plst-hm-item"><a href="/#tags">Top 20 Pop Songs</a></li>
                    <li class="plst-hm-item"><a href="/#tags">Top 30 Rock</a></li>
                    <li class="plst-hm-item"><a href="/#tags">Top 40 Dance</a></li>
                </ul>
            </div>
        </div>



        <div class="home-row-2-ch" style="min-height:120px;">
            <div class="row row-item">
            </div>
        </div>



        <div class="row row-item">
            <div class="col-md-12 main-back" style="float:left; width:100%; height:50px;">
            </div>
        </div>


        <div id="rctTags" class="row row-item" style=" min-height:50px;">
        </div>


    </div>



<script>

    $(document).ready(function () {

        $.get('/Charts/Index', function (data) {
            $(".home-row-2-ch").html(data);
        });


        $(".plst-hm-item").on("click", function () {
            PreloaderOn(".main-content");
            $.get("/Tags/Index", function (data) {
                $(".main-content").html(data);
                PreloaderOff();
            });
        });


        $(".plst-hm-item").on("mouseover", function () {
            $(this).css("background-color", "#C8E3FA");
        });

        $(".plst-hm-item").on("mouseout", function () {
            $(this).css("background-color", "#FFFFFF");
        });

    });
</script>
