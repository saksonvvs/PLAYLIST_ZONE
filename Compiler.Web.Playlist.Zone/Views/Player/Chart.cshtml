@model Playlist.Zone.Dto.Music.Charts.AbstractChartDto
@{
    ViewData["Title"] = "Chart";
    Layout = null;
}

<div class="plr-ch">

    <div class="plst-controls">
        <div class="addLike">
            Likes
            <img alt="Prev" src="/images/hrt_icn.png" style="width:15px; margin-top:-3px;" />
        </div>
        <div class="viewsNum">
            Views
            <img alt="Prev" src="/images/eye_icn.png" style="width:15px; margin-top:-3px;" />
        </div>
        <div class="addSongPlstBtn">
            Add +
        </div>
    </div>


    <div class="pls-controller">
        @foreach (var item in Model.SongsList)
        {
        <div class="plst-Itm" data-song="@item.YouTubeId" data-id="@item.Id">
            @item.Artist - @item.Name
        </div>
        }
    </div>


</div>


<script>
    
    $(document).ready(function () {
    
        $(".plst-Itm").on("click", function () {
            OnSongClick($(this));
        });

        $(".addLike").on("click", function () {
            $.get("/Data/Charts/AddLike/@Model.Id", function (data) {
            });
        });

        $(".addSongPlstBtn").on("click", function () {
            AddSongToPlaylist($(".plst-Itm-High-Back").attr("data-song"));
        });


        OnSongClick($(".plst-Itm").first());
    });

</script>
