        </ul>
        <a href="/Music/Generate/@((int)Compiler.Common.Music.ChartType.YouTube)" style="background-color:#439b58; color:#FFFFFF; padding:4px;">Generate Chart</a>
    </div>
</div>



<div class="row" style="margin-top:40px;">

    <div class="loc-md-6">

        <input type="button" id="LoadChartContentBtn" value="Load iTunes Content" />

    </div>

    <div class="loc-md-6">

    </div>

</div>



@section Scripts
{


    <script>

             $(document).ready(function () {

                 $("#LoadChartContentBtn").on("click", function () {

                     $.get("https://www.apple.com/itunes/charts/songs/", function (data) {
                         alert(data);
                     });

                 });

             });

    </script>


}