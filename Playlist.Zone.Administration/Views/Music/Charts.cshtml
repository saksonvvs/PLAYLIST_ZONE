@model List<Playlist.Zone.Dto.Music.Charts.AbstractChartDto>
@{
    ViewData["Title"] = "Charts";
}




<div class="row row-item">


    <div class="col-md-3">
        <h2>@Compiler.Common.Music.ChartType.Shazam.ToString()</h2>
        <ul>
            @foreach (var item in Model)
            {
                if (item.Type == Compiler.Common.Music.ChartType.Shazam)
                {
                    <li><a href="/Player/Chart/@item.Name">@item.Name</a></li>
                }
            }
        </ul>
        <a href="/Music/Generate/@((int)Compiler.Common.Music.ChartType.Shazam)" style="background-color:#439b58; color:#FFFFFF; padding:4px;">Generate Chart</a>
    </div>
    <div class="col-md-3">
        <h2>@Compiler.Common.Music.ChartType.Billboard.ToString()</h2>
        <ul>
            @foreach (var item in Model)
